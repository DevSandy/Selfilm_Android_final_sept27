<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Setting_F"
    android:background="@color/appcolorbg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.accelstackace.selfilmindia.Settings.Setting_F">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:background="@color/appcolorbg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/appcolorbg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appcolorbg">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:scaleType="fitStart"
                android:id="@+id/Goback"
                android:tint="@color/white"
                android:src="@drawable/ic_back"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy and Settings"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/designlay"
            android:background="@color/black"
            android:gravity="center"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:text="Selfilm India"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_margin="8dp"
                android:text="Version 1.0.0"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_below="@+id/designlay">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Verification"
                android:id="@+id/request_verification_txt"
                android:textSize="15dp"
                android:background="@color/appcolorbg"
                android:textColor="@color/white"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:id="@+id/privacy_policy_txt"
                android:textSize="15dp"
                android:background="@color/appcolorbg"
                android:textColor="@color/white"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer Info"
                android:id="@+id/developerinfo"
                android:textSize="15dp"
                android:background="@color/appcolorbg"
                android:textColor="@color/white"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logout_txt"
                android:textSize="15dp"
                android:background="@color/appcolorbg"
                android:textColor="@color/white"
                android:padding="15dp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
