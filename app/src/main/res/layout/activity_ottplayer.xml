<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appcolorbg"
    tools:context=".Prime.ottplayer">
    <cn.jzvd.JzvdStd
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
   <TextView
       android:id="@+id/movietitle"
       android:layout_width="wrap_content"
       android:textStyle="bold"
       android:textColor="@color/white"
       android:textSize="25dp"
       android:layout_marginLeft="8dp"
       android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/moviedescription"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/casttitle"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:text="Cast &amp; Crew"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/heroimage"
            android:layout_width="75dp"
            android:layout_height="75dp"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/heroname"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/graycolor"></LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/heroinepic"
            android:layout_width="75dp"
            android:layout_height="75dp"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/heroinename"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/graycolor"></LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/directorpic"
            android:layout_width="75dp"
            android:layout_height="75dp"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/directorname"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/graycolor"></LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/producerpic"
            android:layout_width="75dp"
            android:layout_height="75dp"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/producername"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>